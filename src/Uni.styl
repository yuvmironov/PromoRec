	&-Text
		display block
		margin 0 auto
		position relative
		top 28px
		width 80%
	&-All
		display block
		margin 0 auto
		position relative
		top: -75px;
		width 30%
	&-Header
		display inline-block
		width auto
		border-style: solid;
		border-width: 6px;
		border-image: url('images/Uni/UniBorder.png') 6 fill repeat;
		padding 26px 40px
		position: relative;
		top: -100px;
	&-HeaderText
		font-family: Rubik;
		font-weight: 500;
		font-size: 28px;
		letter-spacing: 0.1em;
		color: #8CB2D5;
	&-Description
		position relative
		top -80px
	&-Desc
		font-family: Roboto;
		line-height: 21px;
		font-size: 16px;
		text-align: center;
		color: #7599BA;
		max-width 1130px
		margin 0 auto
		&:not(:last-child)
			margin-bottom 25px
	&-MainLink
		color #EECFC2
		&:hover
			color #C5AA9F
		&_Active
			border-bottom-color #C5AA9F
			color #C5AA9F
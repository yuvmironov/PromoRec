.IndexPages
	width 100vw
	height 100vh
	background-image url('../images/IndexBg.png');
	background-size cover
	background-repeat no-repeat
	background-position center bottom
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
	overflow hidden
	&-Back
		position fixed
		top 25px
		left 25px
	&-Social
		position fixed
		z-index 9000
		top 25px
		right 25px
		display flex
	&-Logo
		margin-bottom 30px
		margin-right: 9px;
		margin-top: 200px;
	&-Header
		font-family: 'Rubik';
		font-size: 23px;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: #BDBDBD;
		position relative
		margin-bottom 60px
		font-weight: 400;
		&:after
			content ''
			width 125px
			height 1px
			background-color #e0e0e0
			position absolute
			bottom -20px
			left: calc(50% - 63px);
	&-Menu
		margin-bottom 60px
		margin-right: 77px;
	&-NavLink
		font-family: 'Rubik';
		font-size: 18px;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: #828282;
		text-decoration none
		&_Active
			color black
		&:not(:last-child)
			margin-right 80px
	&-Info
		display flex
		position absolute
		bottom 0
		align-items center
		//position relative
		&_Show
			animation InfoShow 1s linear forwards
			//visibility visible
		&_Hide
			animation InfoHide 0.5s linear forwards
			//visibility hidden
	&-List
		position absolute
		right: -616px;
		width: 900px;
		
.Rec-Dvig
	animation Rec 0.4s linear 1s forwards
	
	
@keyframes InfoShow
	from
		visibility hidden
		opacity 0
	to
		visibility visible
		opacity 1
	
@keyframes InfoHide
	from
		visibility visible
		opacity 1
	to
		visibility hidden
		opacity 0
	
	
@keyframes Rec
	from
		transform translateX(0)
	to
		transform translateX(-400px)
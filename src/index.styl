*
	margin 0
	padding 0
	box-sizing border-box

.Accord {
	display: flex;
	flex-direction: column;
}
.Accord-Link {
	text-decoration: none;
	font-size: 20px;
	text-transform: uppercase;
	color: black;
	position relative
}

.Accord-Link_NotActive + .Accord-Content {
	display: none;
}

.Accord-Link_NotActive
	&:after
		content: "";
		position: absolute;
		width: 10px;
		height: 2px;
		background-color: #d64b4b;
		top: 20px;
		left: 18px;
	&:before
		content: "";
		position: absolute;
		width: 10px;
		height: 2px;
		background-color: #d64b4b;
		top: 20px;
		left: 18px;
		transform: rotate(90deg);
.Accord-Link_Active
	background-color #f7f7f7
	&:after
		content: "";
		position: absolute;
		width: 10px;
		height: 2px;
		background-color: #d64b4b;
		top: 20px;
		left: 18px;
		



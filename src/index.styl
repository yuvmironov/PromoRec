.Accord {
    display: flex;
    flex-direction: column;
}
.Accord-Link {
    text-decoration: none;
    font-size: 20px;
    text-transform: uppercase;
    color: black;
}
.Accord-Link:hover {
    text-decoration: underline;
}
.Accord-Link_NotActive + .Accord-Content {
    display: none;
}
.Accord-Link_Active {
    text-decoration: underline;
}


.ButtonWhere
	position: fixed;
	bottom: 50px;
	left: calc(50% - 100px);
	font-family: Exo;
	font-size: 16px;
	letter-spacing: 0.05em;
	text-transform: uppercase;
	text-decoration none
	border: 1px solid #BDBDBD;
	border-width 1px
	border-style solid
	padding: 18px 46px;	
	box-sizing: border-box;
	border-radius: 27px;
	color: #828282;
